# Production Environment Configuration
# This file should be added to .env.local or Vercel Environment Variables

# Database Configuration (Railway)
DATABASE_URL="<your-railway-database-url>"

# Application URLs - IMPORTANT: Update these with your actual domain
FRONTEND_URL="https://kinote.vercel.app"
APP_URL="https://kinote.vercel.app"
NEXT_PUBLIC_API_URL="https://kinote.vercel.app/api"

# Node Environment
NODE_ENV="production"

# JWT Configuration
JWT_SECRET="<your-secure-jwt-secret-key>"

# OpenAI API Configuration
OPENAI_API_KEY="<your-openai-api-key>"

# Email Configuration
EMAIL_USER="<your-email@gmail.com>"
EMAIL_PASSWORD="<your-app-password>"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_FROM="Kinote <noreply@kinote.app>"
EMAIL_REPLY_TO="support@kinote.app"
