# Database Configuration
DATABASE_URL="mysql://user:password@localhost:3306/kinote_db"

# Environment (development | production | staging)
NODE_ENV="development"

# JWT Configuration for Authentication
JWT_SECRET="your-secure-jwt-secret-key"

# OpenAI API Configuration for AI features
OPENAI_API_KEY="sk-your-openai-api-key"

# Email/SMTP Configuration
# For Gmail: Generate app password at https://myaccount.google.com/apppasswords
# Note: EMAIL_PASSWORD is NOT your Google password, but the 16-character app password
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-16-character-app-password"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_FROM="Kinote <noreply@kinote.app>"
EMAIL_REPLY_TO="support@kinote.app"

# Application Configuration
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

